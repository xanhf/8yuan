<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/c_4d4d4d" />
            <stroke
                android:width="0.5dip"
                android:color="@color/c_4d4d4d" />
            <corners android:radius="@dimen/margin_3dp"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/c_4d4d4d_50" />
            <stroke
                android:width="0.5dip"
                android:color="@color/c_4d4d4d" />
            <corners android:radius="@dimen/margin_3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/c_4d4d4d" />
            <stroke
                android:width="0.5dip"
                android:color="@color/c_4d4d4d" />
            <corners android:radius="@dimen/margin_3dp"/>
        </shape>
    </item>
</selector>