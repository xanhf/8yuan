        android:layout_height="@dimen/margin_0.5dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/color_common_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="match_parent"
            android:textColor="@color/trade_up"
            android:textSize="@dimen/text_size_12sp"
            android:gravity="center|left"
            android:id="@+id/tv_homeinformation_tradeup"
            android:layout_marginLeft="@dimen/margin_10dp"/>
        <View
            android:layout_width="@dimen/margin_10dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_3dp"
            android:background="@drawable/img_homeinformation_tradeup"
            android:id="@+id/view_homeinformation_tradeup"
            android:layout_gravity="center"
            android:layout_weight="1.0"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_3dp"
            android:background="@drawable/img_homeinformation_tradedown"
            android:id="@+id/view_homeinformation_tradedown"
            android:layout_gravity="center"
            android:layout_marginLeft="-1dp"
            android:layout_weight="1.0"/>
        <View
            android:layout_width="@dimen/margin_10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="match_parent"
            android:textColor="@color/trade_down"
            android:textSize="@dimen/text_size_12sp"
            android:gravity="center|right"
            android:id="@+id/tv_homeinformation_tradedown"
            android:layout_marginRight="@dimen/margin_10dp"/>
    </LinearLayout>
