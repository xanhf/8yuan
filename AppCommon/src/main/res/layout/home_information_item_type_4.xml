    <TextView
        android:layout_width="@dimen/margin_57dp"
        android:layout_height="@dimen/margin_20dp"
        android:background="@drawable/home_information_typebg"
        android:id="@+id/tv_homeinformation_display57"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/app_common_content"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:id="@+id/tv_homeinformation_content"
        android:lineSpacingExtra="@dimen/margin_4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/app_common_content"
        android:gravity="center|left"
        android:layout_margin="@dimen/margin_10dp"
        android:id="@+id/tv_homeinformation_authorPropose"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/grey"
            android:gravity="center|right"
            android:id="@+id/tv_homeinformation_time"
            android:layout_marginLeft="@dimen/margin_10dp"/>
