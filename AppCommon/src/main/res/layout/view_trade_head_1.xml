<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/optional_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_24dp">


            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="合约"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/text_size_12sp" />

                <ImageView
                    android:id="@+id/img_btnhelp"
                    android:layout_width="@dimen/margin_24dp"
                    android:layout_height="@dimen/margin_24dp"
                    android:src="@drawable/img_hometrade_help" />
            </LinearLayout>


            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/trade_order_ccjj"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_lable_3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="最新价"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_lable_4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="right|center"
                android:text="@string/trade_hold_profit"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_80dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:visibility="gone">

        <include layout="@layout/app_layout_nodata" />
    </LinearLayout>
</LinearLayout>