<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_fafafa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp">
        <TextView
            android:id="@+id/text_tr_buytype"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_24dp"
            android:gravity="left|center"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_tr_buynum"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_24dp"
            android:gravity="left|center"
            android:text="1æ‰‹"
            android:layout_marginLeft="@dimen/margin_4dp"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp"
            android:layout_weight="1.0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="06_16"
            android:textColor="@color/c_999999_80"
            android:id="@+id/text_tr_createtime"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:id="@+id/line_tr_item">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_999999_80"
                android:text="@string/trade_order_createprice"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_tr_createprice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_12sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_999999_80"
                android:text="@string/orderh_today_bzj"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_tr_bzj"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_12sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_999999_80"
                android:text="@string/trade_order_createsxf"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_tr_createsxf"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_12sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>