<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTop_land"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_262626"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin_66dp"

        android:orientation="horizontal"
        android:paddingLeft="16dip"
        android:paddingRight="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minWidth="120dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:gravity="center"
                android:includeFontPadding="false"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="交割日期:"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tv_time_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/c_999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.trade.eight.view.rise.RiseNumberTextView
                android:id="@+id/tv_latest_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_opt_gt"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_rate_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_opt_gt"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dip"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_buy_lable_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="买价:"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/tv_buy_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minWidth="60dip"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_closed_lable_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="成交量:"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/tv_deal_vol_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minWidth="60dip"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_high_lable_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="卖价:"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/tv_sell_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_3dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minWidth="60dip"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_low_lable_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="持仓量:"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/tv_hol_num_land"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minWidth="60dip"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/refreshView_land"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/bg_title_refresh" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/iconback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="0dip">

            <ImageView
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:src="@drawable/img_productdetail_fullscreen_land" />


        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/img_expand_info_land"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_gravity="center"
        android:layout_marginTop="-8dp"
        android:src="@drawable/img_productdetail_info_expand" />

    <LinearLayout
        android:id="@+id/infoView_detail_land"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_10dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:background="@color/c_404041" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="涨停"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_upmost_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/c_EA4A5E"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="开盘"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_open_land"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1.0"
                    android:text="--"
                    android:textColor="@color/c_EA4A5E"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="最高"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_high_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="--"
                    android:textColor="@color/c_EA4A5E"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="昨收"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_zuoshou_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="结算"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_jiesuan_land"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1.0"
                    android:text="--"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="跌停"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_lowmost_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/c_06A969"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="均价"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_avgprice_land"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1.0"
                    android:text="--"
                    android:textColor="@color/c_EA4A5E"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="最低"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_low_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="--"
                    android:textColor="@color/c_EA4A5E"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left">

                <TextView
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="昨结"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_closed_land"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1.0"
                    android:text="--"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right">


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

