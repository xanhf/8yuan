<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line_tr_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tr_buytype"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/text_tr_buynum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:text="1手"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp" />

            <ImageView
                android:id="@+id/img_tr_today"
                android:layout_width="@dimen/margin_16dp"
                android:layout_height="@dimen/margin_16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:src="@drawable/img_deal_icon_today" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_tr_junjia"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/text_tr_newprice"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/text_tr_profitloss"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:gravity="right|center"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/real_tr_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/line_0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/margin_16dp"
                    android:layout_height="@dimen/margin_5dp"
                    android:src="@drawable/img_deal_topicon" />
            </LinearLayout>

            <View
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <View
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <View
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_143dp"
            android:background="@color/c_464646"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp">

            <LinearLayout
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orderh_today_bzj"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/text_tr_bzj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_4dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trade_order_createsxf"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/text_tr_sxf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_4dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_1"
                android:layout_marginTop="@dimen/margin_8dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_24dp"
                    android:text="@string/order_jgrq"
                    android:textColor="@color/c_999999"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/text_tr_jgrq"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/margin_24dp"
                    android:layout_marginLeft="@dimen/margin_4dp"
                    android:text="05-15"
                    android:gravity="center|left"
                    android:layout_weight="1.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12sp" />
                <ImageView
                    android:id="@+id/img_btnhelp"
                    android:layout_width="@dimen/margin_24dp"
                    android:layout_height="@dimen/margin_24dp"
                    android:src="@drawable/img_hometrade_help" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:background="@color/c_666666" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_tr_opendetail"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="@string/order_holddetail"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15sp" />

                    <View
                        android:layout_width="@dimen/margin_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/c_666666" />

                    <TextView
                        android:id="@+id/text_tr_close"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="快速平仓"
                        android:textColor="@color/c_BB8B7D"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>