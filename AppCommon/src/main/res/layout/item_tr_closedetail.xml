<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_fafafa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp">

        <TextView
            android:id="@+id/text_tr_buytype"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_24dp"
            android:gravity="left|center"
            android:textColor="@color/c_EA4A5E"
            android:textSize="@dimen/text_size_15sp"
            android:text="买涨"/>

        <TextView
            android:id="@+id/text_tr_buynum"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_24dp"
            android:gravity="left|center"
            android:text="1手"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:textColor="@color/c_464646"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15sp"/>


        <TextView
            android:id="@+id/text_tr_creat_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_24dp"
            android:gravity="right|center"
            android:text="08-01"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/text_size_15sp"
            android:layout_weight="1.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_999999_70"
                android:text="@string/trade_order_createprice"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_tr_createprice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:textColor="@color/c_999999_70"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_999999_70"
                android:text="@string/trade_order_createsxf"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_trade_order_createsxf"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:textColor="@color/c_999999_70"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_999999_70"
                android:text="@string/trade_ordersysid"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_trade_ordersysid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:textColor="@color/c_999999_70"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_999999_70"
                android:text="@string/trade_tradeid"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_trade_tradeid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:textColor="@color/c_999999_70"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/c_E6E7EA_70"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginRight="@dimen/margin_16dp"/>
</LinearLayout>