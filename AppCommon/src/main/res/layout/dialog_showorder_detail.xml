<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/c_464646"
            android:text="@string/trade_order_detail"/>
        <Button
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:background="@drawable/img_hometrade_help"
            android:layout_marginLeft="@dimen/margin_4dp"
            android:id="@+id/btn_help"
            android:layout_gravity="center"/>
        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
        <TextView
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:textColor="@color/c_BB8B7D"
            android:padding="@dimen/margin_4dp"
            android:gravity="center|right"
            android:textSize="@dimen/text_size_15sp"
            android:background="@drawable/img_closedlg_icon"
            android:id="@+id/text_cancle"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:background="@color/sub_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="bold"
                android:text="沥青1709"
                android:textColor="@color/c_464646"
                android:id="@+id/text_productname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_464646"
                android:id="@+id/text_buytype"
                android:text="买涨"
                android:layout_marginLeft="@dimen/margin_16dp"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_464646"
                android:id="@+id/text_buynum"
                android:text="1手"
                android:layout_weight="1.0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/c_464646"
                android:text="@string/trade_hold_profit"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_464646"
                android:id="@+id/tetx_hold_profitloss"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/c_464646"
                android:text="@string/lable_true_profitloss"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_464646"
                android:id="@+id/tetx_true_profitloss"/>
        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:background="@color/sub_bg"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:visibility="gone"/>
    <com.trade.eight.view.pulltorefresh.PullToRefreshListView
        android:id="@+id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        android:visibility="visible"/>
</LinearLayout>