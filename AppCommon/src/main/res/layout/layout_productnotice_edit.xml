<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48dp"
        android:background="@color/sub_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_pn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_15sp"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/text_pn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="添加提醒"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_pn_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="保存"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_15sp"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_34dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_12dp">

        <RelativeLayout
            android:id="@+id/upView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/create_tab_up"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textUpView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="买价"
                android:textColor="@color/normal_black_selected_white"
                android:textSize="@dimen/text_size_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/downView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/create_tab_down"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDownView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="卖价"
                android:textColor="@color/normal_black_selected_white"
                android:textSize="@dimen/text_size_15sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:minWidth="@dimen/margin_60dp"
                android:text="@string/product_notice_array"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp" />

            <EditText
                android:id="@+id/edit_pnedit_price"
                android:layout_width="@dimen/margin_125dp"
                android:layout_height="@dimen/margin_36dp"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:background="@drawable/bg_btn_subbg"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/margin_6dp"
                android:textCursorDrawable="@drawable/edit_color_cursor"
                android:textColor="@color/app_common_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center|left"
                android:text="点"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_16dp"
            android:id="@+id/line_pn_inputtips"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:minWidth="@dimen/margin_60dp"
                android:text="@string/product_notice_range"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_pn_inputtips"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:textColor="@color/color_opt_gt"
                android:textSize="@dimen/text_size_12sp"
                android:text="@string/product_notice_range"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:minWidth="@dimen/margin_60dp"
                android:text="@string/product_notice_range"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp" />

            <RadioGroup
                android:id="@+id/rg_pn_range"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_36dp"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="@dimen/margin_60dp"
                    android:layout_height="@dimen/margin_36dp"
                    android:background="@drawable/productnotice_rang_bg_color"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/bg_color_main_tab_indicator" />

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="@dimen/margin_60dp"
                    android:layout_height="@dimen/margin_36dp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:background="@drawable/productnotice_rang_bg_color"
                    android:button="@null"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/bg_color_main_tab_indicator" />

                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="@dimen/margin_60dp"
                    android:layout_height="@dimen/margin_36dp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:background="@drawable/productnotice_rang_bg_color"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12sp"

                    android:text="15"
                    android:textColor="@color/bg_color_main_tab_indicator" />

                <RadioButton
                    android:id="@+id/rb_4"
                    android:layout_width="@dimen/margin_60dp"
                    android:layout_height="@dimen/margin_36dp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:background="@drawable/productnotice_rang_bg_color"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="20"
                    android:textColor="@color/bg_color_main_tab_indicator" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:minWidth="@dimen/margin_60dp"
                android:text="@string/product_notice_range"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_pn_rangtips"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@color/sub_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60dp"
            android:layout_marginLeft="@dimen/margin_16dp">

            <LinearLayout
                android:id="@+id/line_check_pn_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <CheckBox
                    android:id="@+id/check_pn_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/cashin_select"
                    android:checked="true"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:gravity="center"
                    android:text="@string/product_notice_day"
                    android:textColor="@color/app_common_content"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_check_pn_week"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <CheckBox
                    android:id="@+id/check_pn_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/cashin_select"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:gravity="center"
                    android:text="@string/product_notice_week"
                    android:textColor="@color/app_common_content"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btn_delete_pn"
            android:layout_width="@dimen/margin_160dp"
            android:layout_height="@dimen/margin_36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:background="@drawable/bg_btn_opt_gt"
            android:text="@string/product_notice_delete"
            android:textColor="@color/color_opt_gt"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:text="@string/product_notice_tips1"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_32dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:text="@string/product_notice_tips2"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>
</LinearLayout>