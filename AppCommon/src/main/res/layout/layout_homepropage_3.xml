<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_product_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_100dp"
        android:layout_weight="1.0"
        android:paddingLeft="@dimen/margin_16dp">

        <TextView
            android:id="@+id/tv_product_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="center|left"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp"/>

        <TextView
            android:id="@+id/tv_pro_open_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_1"
            android:gravity="center|left"
            android:text="--"
            android:textColor="@color/trade_up"
            android:textSize="@dimen/text_size_24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pro_open_1"
            android:gravity="center|left">

            <TextView
                android:id="@+id/tv_pro_rate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_pro_ratechange_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_product_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_100dp"
        android:layout_weight="1.0" >

        <View
            android:layout_width="@dimen/margin_0.5dp"
            android:layout_height="@dimen/margin_64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/c_E6E7EA_70" />

        <TextView
            android:id="@+id/tv_product_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="center|left"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp"
            android:paddingLeft="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/tv_pro_open_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_2"
            android:gravity="center|left"
            android:text="--"
            android:textColor="@color/trade_up"
            android:textSize="@dimen/text_size_24sp"
            android:paddingLeft="@dimen/margin_16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pro_open_2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_16dp">

            <TextView
                android:id="@+id/tv_pro_rate_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_pro_ratechange_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_product_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_100dp"
        android:layout_weight="1.0">

        <View
            android:layout_width="@dimen/margin_0.5dp"
            android:layout_height="@dimen/margin_64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/c_E6E7EA_70" />

        <TextView
            android:id="@+id/tv_product_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:gravity="center|left"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp"
            android:paddingLeft="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/tv_pro_open_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_3"
            android:gravity="center|left"
            android:text="--"
            android:textColor="@color/trade_up"
            android:textSize="@dimen/text_size_24sp"
            android:paddingLeft="@dimen/margin_16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pro_open_3"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_16dp">

            <TextView
                android:id="@+id/tv_pro_rate_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_pro_ratechange_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>