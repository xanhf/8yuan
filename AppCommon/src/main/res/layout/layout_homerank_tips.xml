<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/img_homerank_tipsbg"
    android:layout_marginRight="@dimen/margin_16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homerank_tip1"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/app_common_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/app_common_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:id="@+id/tv_tips2_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homerank_tip2"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/app_common_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:lineSpacingExtra="@dimen/margin_4dp"
            android:layout_toRightOf="@id/tv_tips2_left"
            android:layout_marginRight="@dimen/margin_16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/app_common_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:id="@+id/tv_tips3_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homerank_tip3"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/app_common_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:lineSpacingExtra="@dimen/margin_4dp"
            android:layout_toRightOf="@id/tv_tips3_left"
            android:layout_marginRight="@dimen/margin_16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3."
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/app_common_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:id="@+id/tv_tips4_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homerank_tip4"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/app_common_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:lineSpacingExtra="@dimen/margin_4dp"
            android:layout_toRightOf="@id/tv_tips4_left"
            android:layout_marginRight="@dimen/margin_16dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_6dp"/>
</LinearLayout>
