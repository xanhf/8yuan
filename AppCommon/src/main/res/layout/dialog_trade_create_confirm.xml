<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleHit"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center"
        android:background="@drawable/round_top_grey"
        android:gravity="center"
        android:text="确认下单"
        android:textColor="@color/app_common_content"
        android:textSize="@dimen/text_size_17sp" />


    <LinearLayout
        android:id="@+id/typeView"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_marginTop="16dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:layout_weight="1"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:background="@color/trade_tab_create_selected" />

    <LinearLayout
        android:id="@+id/totalView"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:layout_weight="1"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/color_opt_gt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:gravity="right"
            android:text="元"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dip">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="0dip"
            android:layout_height="36dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dip"
            android:layout_weight="1"
            android:background="@drawable/dialog_trade_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dip"
            android:layout_height="36dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:background="@drawable/index_weipan_btn_buy_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>
</LinearLayout>