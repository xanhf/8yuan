<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">


                <TextView
                    android:id="@+id/tv_cashtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:gravity="bottom"
                    android:text="提现"
                    android:singleLine="true"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/text_size_15sp"/>

                <TextView
                    android:id="@+id/tv_bankname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/c_999999_80"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginLeft="@dimen/margin_8dp"/>

                <TextView
                    android:id="@+id/tv_bankcard_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/c_999999_80"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/tv_makeMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20000"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="0dip">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="2015-12-12 12:12:12"
                    android:textColor="@color/c_999999_80"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/c_999999_80"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/app_layout_common_line" />

</LinearLayout>