<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="314dip"
        android:layout_height="302dip"
        android:background="@drawable/img_u_reg_ok">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="260dip"
            android:layout_height="200dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dip"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dip"
                android:text="送你一张代金券，零成本下单"
                android:textColor="@color/app_common_content"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="147dip"
                android:layout_height="70dip"
                android:layout_marginBottom="27dip"
                android:layout_marginTop="20dip"
                android:src="@drawable/icon_u_d_quan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_cancle"
                    android:layout_width="0dip"
                    android:layout_height="36dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/dlg_u_reg_ok_cancle"
                    android:gravity="center"
                    android:text="稍后再说"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_17sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/btn_commit"
                    android:layout_width="0dip"
                    android:layout_height="36dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="1"
                    android:background="@drawable/dlg_u_reg_ok_submit"
                    android:gravity="center"
                    android:text="去下单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
