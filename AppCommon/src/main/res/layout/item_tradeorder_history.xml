<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/line_tr_item">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@color/c_E6E7EA_70"
        android:layout_marginTop="@dimen/margin_16dp"/>

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_24dp"
        android:gravity="left|center"
        android:textColor="@color/c_464646"
        android:textSize="@dimen/text_size_15sp"
        android:paddingLeft="@dimen/margin_16dp"
        android:text="白银1708"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_16dp"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_24dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tr_buytype"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/text_tr_buynum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_24dp"
                android:gravity="left|center"
                android:text="1手"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp" />

            <ImageView
                android:id="@+id/img_tr_today"
                android:layout_width="@dimen/margin_16dp"
                android:layout_height="@dimen/margin_16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:src="@drawable/img_deal_icon_today" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_tr_junjia"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/text_tr_newprice"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/text_tr_profitloss"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:layout_weight="1.0"
            android:gravity="right|center"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>

</LinearLayout>