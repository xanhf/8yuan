<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:padding="15dip"
        android:text="@string/upgrade_title"
        android:textColor="@color/app_common_content"
        android:textSize="17sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/sub_bg"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_upgradeversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:padding="15dip"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="@string/upgrade_contenttitle"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        android:id="@+id/tv_upgradecontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:paddingBottom="15dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/dialog_login_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dip"
            android:layout_weight="1"
            android:background="@drawable/dialog_login_submit"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>
</LinearLayout>