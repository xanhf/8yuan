<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/line_root">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:background="@color/c_E6E7EA_70"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_10dp">

        <TextView
            android:id="@+id/text_tr_productname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center|left"
            android:text="沥青1707"
            android:textStyle="bold"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <ImageView
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:layout_gravity="center"
            android:id="@+id/img_trade_arrow"
            android:src="@drawable/img_trade_arrow" />
    </LinearLayout>
</LinearLayout>