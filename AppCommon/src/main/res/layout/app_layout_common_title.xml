<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_44dp"
    android:background="@color/white"
    android:visibility="visible">

    <ImageView
        android:layout_width="@dimen/margin_56dp"
        android:layout_height="@dimen/margin_40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/img_goback_new"
        android:id="@+id/gobackView"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:textColor="@color/c_464646"
        android:textSize="@dimen/text_size_17sp"
        android:id="@+id/title_tv"
        android:layout_toRightOf="@+id/gobackView"/>

</RelativeLayout>