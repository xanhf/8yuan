        <TextView
            android:layout_width="@dimen/margin_90dp"
            android:layout_height="wrap_content"
            android:text="当日结存"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
