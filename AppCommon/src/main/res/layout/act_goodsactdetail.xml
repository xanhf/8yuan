<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/app_layout_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_16dp">

                <ImageView
                    android:id="@+id/img_goodsact_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/text_gift_limitnum"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_4dp"
                    android:layout_marginTop="@dimen/margin_32dp"
                    android:background="@drawable/btn_halfwhite50round_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/text_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_45dp"
                    android:gravity="center"
                    android:text="特权卡"
                    android:textColor="@color/white_40"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/text_giftname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_lable"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_25sp" />

                <TextView
                    android:id="@+id/text_giftpoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_giftname"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:gravity="center"
                    android:textColor="@color/white_50"
                    android:textSize="@dimen/text_size_15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/text_giftpoins_debeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textColor="@color/integral_poin_orange"
                        android:textSize="@dimen/text_size_24sp" />

                    <com.trade.eight.view.TextViewBorder
                        android:id="@+id/text_rebatinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_16dp"
                        android:background="@drawable/bg_btn_integralpoin"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/integral_poin_orange"
                        android:textSize="@dimen/text_size_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="距离结束仅剩"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4dp">

                        <RelativeLayout
                            android:layout_width="@dimen/margin_28dp"
                            android:layout_height="@dimen/margin_32dp"
                            android:background="@drawable/bg_btn_subbg_solid_grey_10"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_goodsact_shi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:text="01"
                                android:textColor="@color/app_common_content"
                                android:textSize="@dimen/text_size_17sp"
                                android:layout_marginTop="-2dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="时"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_9sp"
                                android:layout_marginBottom="@dimen/margin_2dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/margin_28dp"
                            android:layout_height="@dimen/margin_32dp"
                            android:layout_marginLeft="@dimen/margin_4dp"
                            android:background="@drawable/bg_btn_subbg_solid_grey_10"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_goodsact_fen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:text="01"
                                android:textColor="@color/app_common_content"
                                android:textSize="@dimen/text_size_17sp"
                                android:layout_marginTop="-2dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="分"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_9sp"
                                android:layout_marginBottom="@dimen/margin_2dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/margin_28dp"
                            android:layout_height="@dimen/margin_32dp"
                            android:layout_marginLeft="@dimen/margin_4dp"
                            android:background="@drawable/bg_btn_subbg_solid_grey_10"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_goodsact_miao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:text="01"
                                android:textColor="@color/app_common_content"
                                android:textSize="@dimen/text_size_17sp"
                                android:layout_marginTop="-2dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="秒"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_9sp"
                                android:layout_marginBottom="@dimen/margin_2dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_32dp"
                android:background="@color/sub_bg"
                android:paddingTop="@dimen/margin_6dp">

                <TextView
                    android:id="@+id/text_takenum"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/text_gift_limitnum_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:layout_marginRight="@dimen/margin_16dp"
                    android:textSize="@dimen/text_size_12sp"
                    android:gravity="center"
                    android:textColor="@color/integral_poin_orange" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_giftname_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16dp"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_giftdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16dp"
                android:lineSpacingExtra="@dimen/margin_4dp"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/text_giftauthdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:lineSpacingExtra="@dimen/margin_4dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_giftrule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:lineSpacingExtra="@dimen/margin_4dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_giftmask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:textColor="@color/integral_poin_orange"
                android:textSize="@dimen/text_size_12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_70dp"/>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/line_optionview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_70dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_10dp"
            android:background="@drawable/img_goodsshawdon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60dp"

            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="总计"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:id="@+id/text_giftpoins_debeat_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_4dp"
                        android:gravity="center"
                        android:textColor="@color/color_opt_gt"
                        android:textSize="@dimen/text_size_20sp" />

                    <TextView
                        android:id="@+id/text_userdebeat_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_4dp"
                        android:gravity="center"
                        android:textColor="@color/color_opt_gt"
                        android:textSize="@dimen/text_size_12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_user_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:text="积分余额:200000"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_buynow"
                android:layout_width="@dimen/margin_112dp"
                android:layout_height="match_parent"
                android:background="@color/color_opt_gt"
                android:gravity="center"
                android:text="马上抢"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>