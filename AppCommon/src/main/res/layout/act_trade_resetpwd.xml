<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_bg"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    android:orientation="vertical">

    <include layout="@layout/app_layout_common_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="12dip"
        android:background="@drawable/input_login_stork_round">

        <TextView
            android:id="@+id/ed_uname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="16dip"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/text_size_15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/codeView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="12dip"
        android:background="@drawable/input_login_stork_round"
        android:visibility="visible">

        <EditText
            android:id="@+id/ed_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnGetCode"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_code"
            android:inputType="number"
            android:paddingLeft="16dip"
            android:singleLine="true"
            android:textColor="@color/app_common_content"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/text_size_15sp"

            />

        <Button
            android:id="@+id/btnGetCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="16dip"
            android:text="点此获取"
            android:textColor="@color/app_common_selected" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="12dip"
        android:background="@drawable/input_login_stork_round">

        <EditText
            android:id="@+id/ed_upwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/showPwdView"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_pwd_reset"
            android:inputType="textPassword"
            android:paddingLeft="16dip"
            android:singleLine="true"
            android:textColor="@color/app_common_content"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/text_size_15sp" />

        <RelativeLayout
            android:id="@+id/showPwdView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip">

            <ImageView
                android:id="@+id/img_showpwd"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_hide_pwd" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="12dip">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/dialog_trade_submit_blue"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/quick_close_submit"
            android:textSize="@dimen/text_size_15sp" />

    </RelativeLayout>


</LinearLayout>
