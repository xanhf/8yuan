<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:id="@+id/line_tradeclose_info">
        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:src="@drawable/tradeclose_select"
            android:layout_marginRight="@dimen/margin_8dp"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:textSize="@dimen/text_size_15sp"
            android:layout_weight="1.0"
            android:gravity="left"
            android:id="@+id/text_buytype_count"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:textSize="@dimen/text_size_15sp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:id="@+id/text_trade_order_ccjj"
            android:textColor="@color/c_464646"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_24dp"
            android:textSize="@dimen/text_size_15sp"
            android:text="买跌10手"
            android:id="@+id/text_trade_order_ccyk"
            android:layout_weight="1.0"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_208dp"
        android:background="@color/c_fafafa"
        android:paddingLeft="@dimen/margin_48dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_16dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/line_tradeclose_menu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_44dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/trade_close_price"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_999999_80"
                android:gravity="center|left"
                android:layout_weight="1.0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_15sp"
                android:gravity="center|left"
                android:text="--"
                android:textColor="@color/c_464646"
                android:id="@+id/text_trade_close_price"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_44dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trade_close_num"
                android:textSize="@dimen/text_size_15sp"
                android:layout_weight="1.0"
                android:id="@+id/text_trade_close_num"
                android:textColor="@color/c_999999_80"/>

            <Button
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:background="@drawable/img_deal_reduce"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_deal_reduce"/>
            <EditText
                android:id="@+id/ed_num"
                android:layout_width="@dimen/margin_40dp"
                android:layout_height="@dimen/margin_32dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:background="@drawable/t_add_input"
                android:gravity="center"
                android:inputType="number"
                android:selectAllOnFocus="false"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="visible" />
            <Button
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:background="@drawable/img_deal_add"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_deal_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_44dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trade_close_sxf"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_999999_80"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15sp"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:textColor="@color/c_464646"
                android:text="--元"
                android:gravity="right"
                android:layout_weight="1.0"
                android:id="@+id/text_trade_close_sxf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_44dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trade_close_orderprofit"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_999999_80"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="2元"
                android:layout_weight="1.0"
                android:gravity="right"
                android:textSize="@dimen/text_size_15sp"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:id="@+id/text_trade_close_orderprofit"
                android:textColor="@color/c_464646"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@color/sub_bg"/>
</LinearLayout>