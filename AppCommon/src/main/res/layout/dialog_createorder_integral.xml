<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:background="@color/sub_bg"
        android:gravity="center|left">
        <ImageView
            android:layout_width="@dimen/margin_72dp"
            android:layout_height="@dimen/margin_32dp"
            android:id="@+id/img_inteproduct"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/home_title_bg_color"
            android:textSize="@dimen/text_size_15sp"
            android:paddingLeft="@dimen/margin_16dp"
            android:id="@+id/text_inteproduct_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp"
            android:paddingLeft="@dimen/margin_16dp"
            android:text="@string/intergral_exchangenum"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:gravity="center">
            <Button
                android:layout_width="@dimen/margin_40dp"
                android:layout_height="@dimen/margin_36dp"
                android:background="@drawable/create_integralorder_minus"
                android:id="@+id/btn_createorder_minus"/>
            <Button
                android:layout_width="@dimen/margin_80dp"
                android:layout_height="@dimen/margin_36dp"
                android:background="@drawable/create_grey_stork"
                android:textColor="@color/home_title_bg_color"
                android:id="@+id/btn_createorder_num"
                android:textSize="@dimen/text_size_17sp"
                android:text="1"/>
            <Button
                android:layout_width="@dimen/margin_40dp"
                android:layout_height="@dimen/margin_36dp"
                android:background="@drawable/create_integralorder_plus"
                android:id="@+id/btn_createorder_plus"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/sub_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp"
            android:paddingLeft="@dimen/margin_16dp"
            android:text="@string/my_integral"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/home_title_bg_color"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:id="@+id/text_account_integral"
            android:text="@string/my_integral"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/sub_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/home_title_bg_color"
                    android:textSize="@dimen/text_size_15sp"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:text="@string/intergral_accountnum"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/trade_up"
                    android:textSize="@dimen/text_size_20sp"
                    android:id="@+id/text_needintegral"
                    android:text="800"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:id="@+id/line_rebateinfo_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/home_title_bg_color"
                    android:textSize="@dimen/text_size_15sp"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:text="@string/intergral_accountnum"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/line_rebateinfo"
                    android:layout_marginLeft="@dimen/margin_20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_12sp"
                        android:text="180000"
                        android:id="@+id/text_integralrebat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_16dp"
                        android:textColor="@color/integral_poin_orange"
                        android:textSize="@dimen/text_size_12sp"
                        android:text="180000"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:id="@+id/text_rebatinfo"
                        android:layout_marginLeft="@dimen/margin_8dp"
                        android:background="@drawable/bg_btn_integralpoin"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <Button
            android:layout_width="@dimen/margin_90dp"
            android:layout_height="match_parent"
            android:text="@string/intergral_exchange_option"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_inteexchange"
            android:background="@color/sub_blue"/>
    </LinearLayout>
</LinearLayout>
