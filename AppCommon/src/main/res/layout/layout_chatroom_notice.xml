<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_56dp"
    android:background="@color/sub_blue_80"
    android:orientation="vertical"
    android:id="@+id/rel_chatroom_notice">

    <RelativeLayout
        android:layout_width="@dimen/margin_28dp"
        android:layout_height="@dimen/margin_28dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:id="@+id/rel_time">
        <com.trade.eight.view.RoundProgressBar
            android:id="@+id/pro_time"
            android:layout_width="@dimen/margin_28dp"
            android:layout_height="@dimen/margin_28dp"
            android_custom:max="0"
            android_custom:roundColor="@color/white"
            android_custom:roundProgressColor="@color/grey_50"
            android_custom:roundWidth="@dimen/margin_2dp"
            android_custom:angle="angle_90_1"/>

        <ImageView
            android:layout_width="@dimen/margin_15dp"
            android:layout_height="@dimen/margin_15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_live_pic_notice"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/text_notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="2"
        android:textColor="@color/white"
        android:lineSpacingExtra="@dimen/margin_4dp"
        android:textSize="@dimen/text_size_12sp"
        android:layout_toRightOf="@+id/rel_time"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:text="@string/chat_notice_1"/>
</RelativeLayout>