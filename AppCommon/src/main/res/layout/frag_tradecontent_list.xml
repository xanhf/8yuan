<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.trade.eight.view.pulltorefresh.PullToRefreshListView
            android:id="@+id/pull_refresh_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/optional_title"
            android:background="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/line_unlogin"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="@drawable/spilt_unlogin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_60dp"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_4dp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:src="@drawable/img_close_unlogin"
                android:id="@+id/img_close_unlogin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_16dp"
                android:paddingRight="@dimen/margin_16dp"
                android:text="开启指盈金融，马上投资赚钱"
                android:layout_weight="1.0"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/c_464646"/>
            <Button
                android:layout_width="@dimen/margin_74dp"
                android:layout_height="@dimen/margin_32dp"
                android:background="@drawable/bg_btn_colorb4b9cb_transpert_1dp"
                android:text="@string/lable_my_regandlogin"
                android:textColor="@color/c_BB8B7D"
                android:gravity="center"
                android:textSize="@dimen/text_size_12sp"
                android:id="@+id/btn_unlogin"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>