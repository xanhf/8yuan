<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_44dp"

        android:paddingRight="@dimen/margin_16dp"
        android:id="@+id/line_rootview"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/margin_56dp"
            android:layout_height="@dimen/margin_40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_goback_new"
            android:id="@+id/img_go_back"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_17sp"
            android:id="@+id/text_title"
            android:layout_toRightOf="@+id/img_go_back"/>
        <TextView
            android:id="@+id/text_product_isclose"
            android:layout_width="@dimen/margin_48dp"
            android:layout_height="@dimen/margin_24dp"
            android:background="@color/c_595959"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_title"
            android:text="@string/trade_qihuo_closetrade"
            android:layout_marginLeft="@dimen/margin_4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:id="@+id/text_rightbtn"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/img_rightbtn"/>
            <ImageView
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:id="@+id/img_rightbtn_1"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/img_rightbtn"
                android:src="@drawable/img_productdetail_fullscreen"
                android:layout_marginRight="@dimen/margin_20dp"/>
            <ImageView
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:id="@+id/img_rightbtn"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_productdetail_fullscreen"/>
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:id="@+id/view_spilt"
        android:background="@color/c_E6E7EA_70"/>

</LinearLayout>