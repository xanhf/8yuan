<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_28dp"
        android:gravity="center|left"
        android:paddingLeft="10dip"
        android:text="2016-05-05"
        android:textColor="@color/grey"
        android:background="@color/sub_bg"
        android:textSize="12sp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12dp"
        android:background="@color/color_common_bg"
        android:id="@+id/view_devider"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_weight="1.0"
        android:gravity="center|left"
        android:textColor="@color/app_common_content"
        android:textSize="@dimen/text_size_12sp"
        android:maxLines="3"
        android:id="@+id/tv_homeinformation_title"
        android:lineSpacingExtra="@dimen/margin_4dp"/>
    <TextView
        android:layout_width="@dimen/margin_57dp"
        android:layout_height="@dimen/margin_20dp"
        android:background="@drawable/home_information_typebg"
        android:id="@+id/tv_homeinformation_display57"
        android:visibility="gone"/>
    <TextView
        android:layout_width="@dimen/margin_33dp"
        android:layout_height="@dimen/margin_20dp"
        android:background="@drawable/home_information_typebg"
        android:id="@+id/tv_homeinformation_display33"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp"
            android:id="@+id/tv_homeinformation_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp"
            android:id="@+id/tv_homeinformation_teacher"/>
    </LinearLayout>

</LinearLayout>