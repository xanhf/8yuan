<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="@dimen/margin_18dp"
            android:layout_height="@dimen/margin_18dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"
            android:id="@+id/text_mc_type"
            android:gravity="center"
            android:background="@drawable/bg_btn_colorf54a40"
            android:text="åˆ¸"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_18dp"
            android:textColor="@color/app_common_content"
            android:textSize="@dimen/text_size_15sp"
            android:id="@+id/text_mc_title"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_weight="1.0"/>
        <View
            android:id="@+id/text_mc_new"
            android:layout_width="@dimen/margin_6dp"
            android:layout_height="@dimen/margin_6dp"
            android:layout_gravity="center"
            android:background="@drawable/red_img_tip"
            android:layout_marginLeft="@dimen/margin_10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_18dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12sp"
            android:id="@+id/text_mc_time"
            android:layout_marginLeft="@dimen/margin_10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_12sp"
        android:lineSpacingExtra="@dimen/margin_4dp"
        android:id="@+id/text_mc_abstract"
        android:layout_marginLeft="@dimen/margin_44dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/sub_bg"/>
</LinearLayout>