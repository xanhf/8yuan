<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_normal_white_press_grey"
    android:orientation="vertical"

    >

    <LinearLayout
        style="@style/item_style"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp">

        <LinearLayout
            android:id="@+id/linearlayot"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_optional"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/selling_rate"
                android:layout_width="match_parent"
                android:layout_height="28dip"
                android:paddingLeft="2dip"
                android:focusable="false"
                android:gravity="center"
                android:minWidth="60dip"
                android:singleLine="true"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/change_rate"
                android:layout_width="match_parent"
                android:layout_height="28dip"
                android:paddingLeft="2dip"
                android:focusable="false"
                android:gravity="center"
                android:minWidth="60dip"
                android:singleLine="true"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/change_chengjiaoliang"
                android:layout_width="match_parent"
                android:layout_height="28dip"
                android:paddingLeft="2dip"
                android:focusable="false"
                android:gravity="center|right"
                android:minWidth="60dip"
                android:singleLine="true"
                android:text="1000"
                android:textColor="@color/c_464646"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/liveroom_divider_h"
        android:visibility="gone"
        android:background="@drawable/app_common_list_divider" />
</LinearLayout>