<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_50dp"
        android:background="@drawable/bg_btn_regsucc_newuser"
        android:id="@+id/line_newuser"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手入门"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学习基本交易规则 "
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_4dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:src="@drawable/img_arrow_white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80dp"
        android:layout_marginBottom="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/bg_btn_regsucc_golive"
        android:id="@+id/line_golive"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看直播"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟着老师看盘交易"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_4dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:src="@drawable/img_arrow_white"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:text="随便看看"
        android:id="@+id/text_seeee"
        android:textColor="@color/c_BB8B7D"
        android:textSize="@dimen/text_size_18sp" />
</LinearLayout>