<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_8dp"
        android:background="@color/sub_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_20dp"
        android:paddingBottom="@dimen/margin_20dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/margin_60dp"
            android:layout_height="@dimen/margin_60dp"
            android:src="@drawable/img_missionicon_temp"
            android:layout_gravity="center"
            android:id="@+id/img_mission_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/app_common_content"
                android:singleLine="true"
                android:text="新手问答赚积分"
                android:id="@+id/text_tasktitle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/grey"
                android:maxLines="2"
                android:text="新手问答赚积分完成题目"
                android:lineSpacingExtra="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:id="@+id/text_taskabstract"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:orientation="horizontal"
                android:id="@+id/line_answerprogress">
                <ProgressBar
                    android:id="@+id/pr_answer"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/margin_6dp"
                    android:max="8"
                    android:progress="7"
                    android:progressDrawable="@drawable/pb_style_bg"
                    android:layout_weight="1.0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3/8"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:id="@+id/text_answerprogress"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_36dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_colorff7901"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15sp"
            android:text="已领取"
            android:id="@+id/btn_taskoption"/>
    </LinearLayout>

</LinearLayout>