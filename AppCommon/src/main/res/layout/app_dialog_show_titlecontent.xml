<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:gravity="center"
        android:textColor="@color/app_common_content"
        android:textSize="17sp"
        android:lineSpacingExtra="@dimen/margin_4dp"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:lineSpacingExtra="@dimen/margin_4dp"/>

    <include layout="@layout/app_layout_common_line" />

    <Button
        android:id="@+id/btnPos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bottom_round"
        android:textColor="@color/c_BB8B7D"
        android:text="@string/iknow"
        android:textSize="16sp" />
</LinearLayout>