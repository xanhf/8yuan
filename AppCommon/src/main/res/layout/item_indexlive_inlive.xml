<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_154dp"
        android:orientation="vertical"
        android:id="@+id/rel_teacher">
        <com.trade.eight.view.CircleImageView
            android:id="@+id/img_fxs_avatar"
            android_custom:circle_style="round"
            android_custom:roundradius="1dp"
            android:layout_width="@dimen/margin_120dp"
            android:layout_height="@dimen/margin_120dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/liveroom_icon_person" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_120dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_toRightOf="@+id/img_fxs_avatar">

            <TextView
                android:id="@+id/text_fxs_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="一休"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/text_fxs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/text_fxs_name"
                android:background="@drawable/bg_btn_999999"
                android:paddingBottom="@dimen/margin_2dp"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_8dp"
                android:paddingTop="@dimen/margin_2dp"
                android:text="高级分析师"
                android:layout_marginTop="@dimen/margin_6dp"
                android:textColor="@color/c_999999_80"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_fxs_introduction"
                android:layout_below="@+id/text_fxs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高级分析师"
                android:layout_marginTop="@dimen/margin_8dp"
                android:textColor="@color/c_999999_80"
                android:textSize="@dimen/text_size_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/margin_7dp"
                    android:layout_height="@dimen/margin_9dp"
                    android:src="@drawable/img_live_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_AF8579"
                    android:textSize="@dimen/text_size_10sp"
                    android:layout_marginLeft="@dimen/margin_4dp"
                    android:text="--人"
                    android:id="@+id/text_online_num"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/sub_bg"
            android:id="@+id/view_spiltline"/>

    </RelativeLayout>
</LinearLayout>