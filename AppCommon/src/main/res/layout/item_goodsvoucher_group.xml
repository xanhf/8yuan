        android:id="@+id/text_integral_exchangename"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/sub_bg"
        android:id="@+id/view_top"/>

</LinearLayout>
