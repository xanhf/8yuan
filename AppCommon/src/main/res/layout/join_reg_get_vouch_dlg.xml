<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/closeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dip"
            android:paddingRight="30dip">

            <View
                android:layout_width="36dip"
                android:layout_height="50dip"
                android:background="@drawable/icon_dlg_fun_close" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bgContView"
            android:layout_width="300dip"
            android:layout_height="380dip"
            android:layout_below="@+id/codeView"
            android:background="@drawable/img_join_reg_get_vouch"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dip"
                android:text="8元红包"
                android:textColor="#FFDD00"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_money"
                android:layout_centerHorizontal="true"
                android:text="已到账"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="270dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reg"
                    android:layout_width="85dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_money"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="--张"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="30dip"
                    android:layout_height="10dip" />

                <TextView
                    android:id="@+id/tv_getvoucher"
                    android:layout_width="85dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_money"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="--张"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bgContView"
            android:layout_marginBottom="20dip"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_voucher"
                android:layout_width="100dip"
                android:layout_height="40dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_round"
                android:gravity="center"
                android:text="查看红包"
                android:textColor="#642F00"
                android:textSize="@dimen/text_size_17sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btn_trade"
                android:layout_width="100dip"
                android:layout_height="40dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dip"
                android:background="@drawable/d_user_nav_index"
                android:gravity="center"
                android:text="去下单"
                android:textColor="#642F00"
                android:textSize="@dimen/text_size_17sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>