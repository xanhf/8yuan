<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trade_item_temp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="16dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dip"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="0dip">

        <LinearLayout
            android:id="@+id/leftView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_voucher_left_8"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_moneyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dip"
                    android:text="@string/money_lable"
                    android:textColor="@color/common_blue"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:gravity="bottom"
                    android:singleLine="false"
                    android:text="8"
                    android:textColor="@color/common_blue"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dip"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="å…ƒ"
                    android:textColor="@color/common_blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightView"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/item_voucher_right_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dip"
                android:layout_height="10dip"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="@string/voucher_tips"
                    android:textColor="@color/app_common_content"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_lable"
                    android:layout_below="@+id/tv_lable"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="---"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="0dip"
                android:layout_height="10dip"
                android:layout_weight="1.3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>