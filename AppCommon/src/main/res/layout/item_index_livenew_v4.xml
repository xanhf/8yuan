<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rel_channel_1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_weight="1.0">

        <com.trade.eight.view.CircleImageView
            android:id="@+id/img_authoravater_live_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_163dp"
            android:background="@drawable/bg_btn_white"
            android:scaleType="fitXY"
            android_custom:circle_style="round"
            android_custom:roundradius = "3dp"/>

        <LinearLayout
            android:id="@+id/line_channel_islive_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_16dp"
            android:background="@drawable/bg_btn_islive"
            android:gravity="center"
            android:minWidth="@dimen/margin_50dp"
            android:paddingLeft="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_4dp"
            android:visibility="gone"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_islive_tag_1"
                android:layout_width="@dimen/margin_7dp"
                android:layout_height="@dimen/margin_9dp"
                android:background="@drawable/channel_live" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:textColor="@color/white"
                android:id="@+id/text_channel_watchnum_1"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:text="在看"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_channel_nolive_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_16dp"
            android:background="@drawable/bg_btn_nolive"
            android:gravity="center"
            android:minWidth="@dimen/margin_50dp"
            android:paddingLeft="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_4dp"
            android:layout_alignParentRight="true"
            android:text="12:00开播"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_17dp"
            android:layout_below="@+id/img_authoravater_live_1"
            android:layout_marginTop="@dimen/margin_6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_channel_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/margin_4dp"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_12sp"
                android:text="一休"
                android:maxWidth="@dimen/margin_60dp"/>

            <TextView
                android:id="@+id/text_teacher_labe_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_17dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_btn_colorb4b9cb_transpert"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_4dp"
                android:paddingRight="@dimen/margin_4dp"
                android:minWidth="@dimen/margin_42dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp"
                android:text="特级分析师"
                android:layout_marginLeft="@dimen/margin_4dp"/>

            <TextView
                android:id="@+id/text_channel_label_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_17dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_btn_colorb4b9cb_transpert"
                android:gravity="center"
                android:minWidth="@dimen/margin_42dp"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_channel_2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_weight="1.0">

        <com.trade.eight.view.CircleImageView
            android:id="@+id/img_authoravater_live_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_163dp"
            android:background="@drawable/bg_btn_white"
            android:scaleType="fitXY"
            android_custom:circle_style="round"
            android_custom:roundradius = "3dp"/>

        <LinearLayout
            android:id="@+id/line_channel_islive_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_16dp"
            android:background="@drawable/bg_btn_islive"
            android:gravity="center"
            android:minWidth="@dimen/margin_50dp"
            android:paddingLeft="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_4dp"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_islive_tag_2"
                android:layout_width="@dimen/margin_7dp"
                android:layout_height="@dimen/margin_9dp"
                android:background="@drawable/channel_live" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:textColor="@color/white"

                android:id="@+id/text_channel_watchnum_2"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:text="在看"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_channel_nolive_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_16dp"
            android:background="@drawable/bg_btn_nolive"
            android:gravity="center"
            android:minWidth="@dimen/margin_50dp"
            android:paddingLeft="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_4dp"
            android:text="12:00开播"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_17dp"
            android:layout_below="@+id/img_authoravater_live_2"
            android:layout_marginTop="@dimen/margin_6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_channel_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/margin_4dp"
                android:textColor="@color/app_common_content"
                android:textSize="@dimen/text_size_12sp"
                android:text="一休"/>

            <TextView
                android:id="@+id/text_teacher_labe_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_17dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_btn_colorb4b9cb_transpert"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_4dp"
                android:paddingRight="@dimen/margin_4dp"
                android:minWidth="@dimen/margin_42dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp"
                android:text="特级分析师"
                android:layout_marginLeft="@dimen/margin_4dp"/>

            <TextView
                android:id="@+id/text_channel_label_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_17dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_btn_colorb4b9cb_transpert"
                android:gravity="center"
                android:minWidth="@dimen/margin_42dp"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
