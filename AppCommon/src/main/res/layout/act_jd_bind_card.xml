<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_bg"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    android:orientation="vertical">

    <include layout="@layout/app_layout_common_title" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sub_bg"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/cardView"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="0dip"
                        android:gravity="left|center_vertical"
                        android:text="卡号"
                        android:textColor="@color/app_common_content"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/ed_bankCard"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/cash_out_input_card"
                        android:inputType="number"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textColor="@color/app_common_content"
                        android:textColorHint="@color/grey_40"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />


                </LinearLayout>

                <include layout="@layout/app_layout_common_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="0dip"
                        android:gravity="left|center_vertical"
                        android:text="户名"
                        android:textColor="@color/app_common_content"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/ed_realName"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/cash_out_input_cardName"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textColor="@color/app_common_content"
                        android:textColorHint="@color/grey_40"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />


                </LinearLayout>

                <include layout="@layout/app_layout_common_line" />

                <LinearLayout
                    android:id="@+id/bankMore"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="0dip"
                        android:clickable="false"
                        android:gravity="left|center_vertical"
                        android:text="选择银行"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/ed_bank"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="0dip"
                        android:layout_marginRight="0dip"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:clickable="false"
                        android:gravity="left|center_vertical"
                        android:hint="@string/cash_out_input_bank"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_40"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dip"
                        android:clickable="false"
                        android:src="@drawable/home_more_arrow_right" />
                </LinearLayout>

                <include layout="@layout/app_layout_common_line" />

                <LinearLayout
                    android:id="@+id/idCardView"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/margin_45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="0dip"
                        android:gravity="left|center_vertical"
                        android:text="身份证号"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/ed_idcard"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="0dip"
                        android:layout_marginRight="0dip"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:hint="@string/cash_jd_idcard"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_40"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />
                </LinearLayout>

                <include layout="@layout/app_layout_common_line" />

                <LinearLayout
                    android:id="@+id/mobileNumberView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/margin_45dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp">

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dip"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="0dip"
                        android:gravity="left|center_vertical"
                        android:text="手机号码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/ed_mobileNum"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="0dip"
                        android:layout_marginRight="0dip"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:hint="@string/cash_jd_mobileNum"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_40"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/iconView"
            android:layout_width="99dip"
            android:layout_height="36dip"
            android:layout_above="@+id/btn_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dip"
            android:src="@drawable/icon_jd_des" />


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dip"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@drawable/trade_money_btn_cz"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>