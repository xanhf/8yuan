<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_122dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/c_E6E7EA_70" />

        <com.trade.eight.view.CircleImageView
            android:id="@+id/img_fxs_avatar"
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_me_headdefault"
            android_custom:circle_style="round"
            android_custom:roundradius="3dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_toRightOf="@+id/img_fxs_avatar">

            <TextView
                android:id="@+id/text_fxs_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="一休"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_20sp" />

            <TextView
                android:id="@+id/text_fxs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="高级分析师"
                android:background="@drawable/bg_btn_999999"
                android:textColor="@color/c_999999_80"
                android:textSize="@dimen/text_size_12sp"
                android:paddingTop="@dimen/margin_2dp"
                android:paddingBottom="@dimen/margin_2dp"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_8dp"/>

            <TextView
                android:id="@+id/text_fxs_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="高级分析师"
                android:textColor="@color/c_999999_80"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginBottom="@dimen/margin_4dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c_E6E7EA_70" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:text="直播时间表"
        android:textColor="@color/app_common_content"
        android:textSize="@dimen/text_size_17sp" />

</LinearLayout>

