<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/heand_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin_44dp"
        android:background="@drawable/bg_nav_bar"
        android:orientation="horizontal">

        <include layout="@layout/app_layout_backview" />

        <TextView
            style="@style/common_title_text"
            android:text="关于我们" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="vertical"
        android:scrollbars="none">

        <TextView
            android:id="@+id/destv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutus_lable"
            android:textColor="@color/app_common_content"
            android:textSize="18sp" />

    </ScrollView>


</LinearLayout>