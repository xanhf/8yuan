<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="@bool/fitsSystemWindows">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_16dp"/>

    <TextView
        android:id="@+id/text_qhlogin_cancle"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/img_closedlg_icon"
        android:gravity="center|right"
        android:padding="@dimen/margin_4dp"
        android:textColor="@color/c_BB8B7D"
        android:textSize="@dimen/text_size_15sp" />

    <ListView
        android:id="@+id/recycle_explain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:listSelector="@color/transparent"></ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_16dp"
        android:visibility="visible"
        android:id="@+id/view_virtualbar"/>
</LinearLayout>