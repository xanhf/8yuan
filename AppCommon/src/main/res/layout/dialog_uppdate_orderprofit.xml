<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:background="@color/sub_bg"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/app_common_content"
        android:gravity="center"
        android:id="@+id/text_ordertitle"
        android:textStyle="bold"
        />

    <com.trade.eight.moudle.trade.view.ProfitLossView
        android:id="@+id/profitLossView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/app_layout_common_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dip">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_subblue_solidblue"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>
</LinearLayout>