<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_112dp"
        android:orientation="vertical"
        android:id="@+id/rel_teacher">

        <RelativeLayout
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_80dp"
            android:id="@+id/rel_authoravater"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true">

            <com.trade.eight.view.CircleImageView
                android:id="@+id/img_fxs_avatar"
                android:layout_width="@dimen/margin_80dp"
                android:layout_height="@dimen/margin_80dp"

                android:scaleType="fitXY"
                android:src="@drawable/liveroom_icon_person"
                android_custom:circle_style="round"
                android_custom:roundradius="1dp" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_24dp"
                android:background="@drawable/bg_btn_4nolive"
                android:layout_alignParentBottom="true"
                android:text="22:00开播"
                android:textColor="@color/white"
                android:id="@+id/text_live_starttime"
                android:textSize="@dimen/text_size_12sp"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_toRightOf="@+id/rel_authoravater">

            <TextView
                android:id="@+id/text_fxs_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/text_fxs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_fxs_name"
                android:layout_marginTop="@dimen/margin_6dp"
                android:background="@drawable/bg_btn_999999"
                android:paddingBottom="@dimen/margin_2dp"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_8dp"
                android:paddingTop="@dimen/margin_2dp"
                android:textColor="@color/c_999999_80"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/text_fxs_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/c_999999_80"
                android:textSize="@dimen/text_size_12sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c_E6E7EA_70"
            android:id="@+id/view_spiltline"/>

    </RelativeLayout>
</LinearLayout>