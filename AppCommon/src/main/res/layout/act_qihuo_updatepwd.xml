<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <com.trade.eight.view.AppTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"></com.trade.eight.view.AppTitleView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <TextView
            android:id="@+id/text_cashin_amount"
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_40dp"
            android:gravity="center|left"
            android:text="@string/lable_old_pwd"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edit_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/lable_old_pwd_hint"
                android:textColorHint="@color/c_999999"
                android:textSize="@dimen/text_size_15sp"
                android:password="true"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/sub_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <TextView
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_40dp"
            android:gravity="center|left"
            android:text="@string/lable_new_pwd"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/lable_new_pwd_hint"
                android:textColorHint="@color/c_999999"
                android:textSize="@dimen/text_size_15sp"
                android:password="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/sub_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_cashin_bankpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp">

        <TextView
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_40dp"
            android:gravity="center|left"
            android:text="@string/lable_new_pwd"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/text_size_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_new_pwd_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/lable_new_pwd_hint"
                android:textColorHint="@color/c_999999"
                android:textSize="@dimen/text_size_15sp"
                android:password="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/sub_bg" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_55dp"
        android:layout_margin="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_80dp"
        android:background="@drawable/bg_btn_qihuo_login"
        android:text="@string/btn_ok"
        android:textSize="@dimen/text_size_17sp"
        android:textColor="@color/white" />


</LinearLayout>